<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.josecruz.colormixer.FragmentMix">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Color 1"
            android:layout_marginLeft="50dp"
            android:id="@+id/TVcolor1"
            android:gravity="center" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Color 2"
            android:layout_marginRight="50dp"
            android:id="@+id/TVcolor2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/BTNcolor2Mixer"
            android:layout_alignTop="@+id/BTNcolor1Mixer"
            android:onClick="pickColor"
            android:layout_alignStart="@+id/TVcolor2" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/BTNcolor1Mixer"
            android:onClick="pickColor"
            android:layout_below="@+id/TVcolor1"
            android:layout_alignStart="@+id/TVcolor1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <FrameLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentTop="true"
            android:id="@+id/shower"
            android:background="@android:color/holo_blue_bright"
            android:layout_centerHorizontal="true"></FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mixer"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
